<div class="span-4">
  <h2>Applications</h2>
</div>

<div class="span-4 large last">
  <%= link_to 'New', new_object_url %>
</div>

<div class="span-23 box">
  <ul>
    <% @applications.each do |a| -%>
      <li>
        <%= link_to a.name, application_environments_url(a) %> 
        (<%= link_to "edit", edit_application_url(a) %> | 
         <%= link_to "destroy", application_url(a), :method => :delete %>)
        <div class="quiet">
          <span class="loud">Clone:</span> <%= a.clone_url %>
        </div>
        <div class="quiet">
          <span class="loud">Cookbooks</span> <%= a.cookbook_clone_url %>
        </div>
      </li>
    <% end -%>
</div>

